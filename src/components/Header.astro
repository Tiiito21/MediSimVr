---

  const { userid, estado } = Astro.props; 

---

<header class="sticky z-10 top-0 w-full h-16 bg-header text-gray-100">
  <div class="flex justify-between h-full items-center">
      <!-- Logo o nombre de la aplicación -->
      <a href="/" class="flex justify-center items-center transition-all duration-300 ease-in-out hover:scale-110">
        <img src="/LogoNB.png" class="w-12 md:w-16 h-auto" />
        <h1 class="text-xl md:text-4xl font-bold">MediSim VR</h1>
      </a>
      <!-- Barra de navegación con enlaces -->
      <nav class="mr-5 text-base sm:text-lg">
        <ul class="inline-flex gap-2 sm:gap-3 md:gap-5 justify-center items-center">
          <li><a href="/plans" class=" hover:underline">Plans</a></li>
          <li><a href="/contact" class=" hover:underline">Contact</a></li>
          <li><a href="/about" class=" hover:underline">About</a></li>
          {estado != undefined ?
            <li class="group/item">
              <a href=`/dashboard${userid}` > <img src="https://via.placeholder.com/40" alt="Usuario" class="w-8 sm:w-10 h-auto cursor-pointer rounded-full" /> </a>
              <div class="bg-white hidden group-hover/item:block absolute border border-black right-7 rounded-md">
                <a href=`/settings${userid}` class="block text-text hover:bg-gray-200 py-2 px-4">Ajustes</a>
                <a href="/logout" class="block text-text hover:bg-gray-200 py-2 px-4">Cerrar Sesion</a>
              </div>  
            </li> :
            <li class="flex gap-2 justify-center items-center">
              <a href="/login" class=" hover:underline">Iniciar Sesion</a>
              <a href="/register" class="bg-white hover:bg-gray-100 text-text py-2 px-2 rounded-full">Registrarse</a>
            </li>
          }
        </ul>
      </nav>
  </div>
</header>
